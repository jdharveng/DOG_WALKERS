<div class="wrapper-chat container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">


        <div class="messages">
          <div class="messages-content">
            <% @messages.each do |message|%>
            <%= render "/messages/messages", message: message,
            user_is_messages_author: message.user == current_user %>
            <% end %>
          </div>
        </div>


        <div class="chat--form">
          <%= form_for [@chat, @message] do |f| %>
            <div class="message-form">
              <%= f.text_field :body, placeholder: "Type message", autofocus: true, class: "message-form--input" %>
              <%= f.hidden_field :chat_id, value: @chat.id %>
              <%= f.submit "Send", class: "message-form--submit" %>
            </div>
          <% end %>
        </div>


    </div>
  </div>
</div>
