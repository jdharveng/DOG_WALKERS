
<div class="wrapper-dogshow">
  <div class="card-mapContainer">
    <div class="row">
      <div class="col-sm-4">
        <div class="card-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= cl_image_path @dog.picture, height: 300, width: 450, crop: :fill %> ');">
        </div>
      </div>
      <div class="col-sm-8">
        <div id="map-show" style="width: 100%; height: 250px; "data-markers="<%= @marker.to_json %>"> </div>
      </div>
    </div>
  </div>

  <div class="wrapper-dog-info container">
    <div class="dog-left-show">
      <div class="dog-top-section">
        <div class="dog-details-name">
          <h1> I'm <%= @dog.name %>, nice to meet you</h1>
        </div>
        <div class="dog-breed-price">
          <div class="dog-details-breed">
            <%= @dog.breed %>
          </div>
          <div class="dog-details-price">
            <p><%= @dog.hourly_price %> euros/h </p>
          </div>
        </div>
      </div>
      <div class="dog-bottom-section">
        <div class="dog-bio">
          <p> <%= @dog.bio %> </p>
        </div>

        <% if policy(@dog).update? %>
          <%= link_to "Edit Dog Information", edit_dog_path(@dog), class:"btn btn-primary" %>
          <%= link_to "Remove my Dog", dog_path(@dog), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-warning" %>
        <% end %>
      </div>
    </div>
    <div class="dog-datepicker">
      <%= render 'formdate', walk: @walk %>
    </div>
  </div>
</div>





